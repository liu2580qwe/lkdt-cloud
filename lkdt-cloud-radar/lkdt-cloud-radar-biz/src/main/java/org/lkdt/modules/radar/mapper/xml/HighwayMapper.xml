<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lkdt.modules.radar.mapper.HighwayMapper">

	<update id="updateTreeNodeStatus" parameterType="java.lang.String">
		update zc_highway set has_child = #{status} where id = #{id}
	</update>
    <select id="queryChildNodesByHwId" resultType="java.lang.String">
		select id from zc_highway
		<where>
			<if test="hwId!='' and hwId!=null">
				and pid=#{hwId}
			</if>
		</where>
	</select>

</mapper>