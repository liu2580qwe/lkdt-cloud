<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lkdt.modules.radar.mapper.ZcLdEventInfoMapper">

	<!-- 事件占比 -->
	<select id="queryEventRatio" parameterType="java.lang.String" resultType="java.util.Map" >
		select event_type as name,count(*) as value from zc_ld_event_info
		<where>  
			<if test="equId != null and equId != ''"> and equ_id = #{equId} </if>
		</where>
		group by event_type
	</select>
</mapper>